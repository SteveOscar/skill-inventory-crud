.container
  %h2.white-text Your s<span class="orange-text">K</span>ills
  .skills
    - @skills.each do |skill|
      .row.skill_view
        .col.s12.m6
          .card.blue-grey.darken-1
            .card-content.white-text
              %a.skill.waves-effect.waves-light.btn.btn-large{:href => "/skills/#{skill.id}"}
                %i.material-icons.right mood
                = skill.name
            .card-action
              %a.edit.waves-effect.waves-light.btn{:href => "/skills/#{skill.id}/edit"} Edit
              %form{:action => "/skills/#{skill.id}", :method => "post"}
                %input{:name => "_method", :type => "hidden", :value => "delete"}
                  %input.delete.waves-effect.waves-light.btn{:type => "submit", :value => "Delete"}
